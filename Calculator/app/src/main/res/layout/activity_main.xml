<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray"
    >

    <TextView
        android:id="@+id/txt_EntryField"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="bottom"
        android:hint="1+1*3"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--            android:layout_columnWeight="1"
-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/txt_EntryField"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rowCount="5"
        android:columnCount="4"
        >

        <Button
            android:id="@+id/seven"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"

            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="7"/>
        <Button
            android:id="@+id/eight"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="8" />
        <Button
            android:id="@+id/nine"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="9" />

        <Button
            android:id="@+id/C"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#801EE932"

            android:textSize="34sp"
            android:text="C" />

        <Button
            android:id="@+id/four"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="4" />
        <Button
            android:id="@+id/five"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="5" />
        <Button
            android:id="@+id/six"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="6" />

        <Button
            android:id="@+id/division"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#801E98E9"

            android:textSize="34sp"
            android:text="/" />

        <Button
            android:id="@+id/one"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="1" />
        <Button
            android:id="@+id/two"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="2" />
        <Button
            android:id="@+id/three"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="3" />

        <Button
            android:id="@+id/multiplication"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#801E98E9"

            android:textSize="34sp"
            android:text="*" />

        <Button
            android:id="@+id/dot"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E96F1E"

            android:textSize="34sp"
            android:text="." />

        <Button
            android:id="@+id/zero"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#80E91E63"

            android:textSize="34sp"
            android:text="0" />

        <Button
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#801E98E9"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="test"

            android:padding="0dp"
            android:text="="
            android:textSize="34sp" />

        <Button
            android:id="@+id/minus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#801E98E9"

            android:textSize="34sp"
            android:text="-" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="#801E98E9"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"

            android:text="\u221A"
            android:textSize="34sp" />

        <Button
            android:id="@+id/partOfAWhole"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="#B21EE9D1"

            android:textSize="34sp"
            android:text="1/x" />

        <Button
            android:id="@+id/plusMinus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="#B21EE9D1"

            android:textSize="34sp"
            android:text="+/-" />

        <Button
            android:id="@+id/plus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="#801E98E9"

            android:textSize="34sp"
            android:text="+" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>